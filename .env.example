# OpenAI API Key for generating recommendations
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MAX_TOKENS=500

# Email configuration for nodemailer
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_SUBJECT=Your Surprise Granite Estimate

# CORS origin (set to your Webflow domain in production)
CORS_ORIGIN=https://your-webflow-site.webflow.io

# Port (Render will override this with its own PORT env var)
PORT=10000
