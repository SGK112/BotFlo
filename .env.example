# Base URL for the server (e.g., your deployed server URL)
BASE_URL=https://surprise-granite-connections-dev.onrender.com

# Cloudinary credentials for image uploads
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# CORS origin for allowed frontend domains
CORS_ORIGIN=http://localhost:3000,https://surprisegranite.com,https://store.surprisegranite.com

# Email configuration for sending notifications (e.g., via Gmail SMTP)
EMAIL_PASS=your_email_password
EMAIL_SUBJECT=Surprise Granite Quote Request
EMAIL_USER=your_email@gmail.com

# Google Sheet CSV URL for labor costs or other data (if applicable)
GOOGLE_SHEET_CSV_URL=https://docs.google.com/spreadsheets/d/your_sheet_id/export?format=csv

# Grok API key for xAI's AI model (if used instead of OpenAI)
GROK_API_KEY=your_grok_api_key

# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017/surprise_granite

# Maximum tokens for OpenAI API responses
OPENAI_MAX_TOKENS=1000

# Server port
PORT=3000

# Published CSV for labor costs (if not using Google Sheets)
PUBLISHED_CSV_LABOR=https://your_domain.com/labor_costs.csv

# Redis URL for caching (optional, for session management)
REDIS_URL=redis://localhost:6379

# Shopify Storefront API access token
SHOPIFY_ACCESS_TOKEN=your_shopify_storefront_access_token

# Shopify shop domain
SHOPIFY_SHOP=surprise-granite.myshopify.com

# Stripe secret key for payments (if implementing payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# OpenAI API key (if using OpenAI instead of Grok)
OPENAI_API_KEY=your_openai_api_key
